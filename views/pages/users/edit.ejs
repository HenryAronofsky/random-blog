<%- include('../../partials/messageHandler'); %>
<form action="/account/<%= pageQuery %>/edit?_method=PUT" method="POST">
    <input type="hidden" name="_method" value="PUT">
    <input type="file" name="file">
    <input type="text" name="name" value="<%= user.userName %>">
    <input type="text" name="description" value="<%= user.userDescription %>">
    <input type="submit" value="Update">
</form>
<form action="/account/<%= pageQuery %>?_method=DELETE" method="POST">
    <input type="submit" value="Delete Account">
</form>